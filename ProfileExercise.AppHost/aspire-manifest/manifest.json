{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "cosmosdb": {
      "type": "azure.bicep.v0",
      "connectionString": "{cosmosdb.outputs.connectionString}",
      "path": "cosmosdb.module.bicep"
    },
    "exercisedb": {
      "type": "value.v0",
      "connectionString": "AccountEndpoint={cosmosdb.outputs.connectionString};Database=exercisedb"
    },
    "profiles": {
      "type": "value.v0",
      "connectionString": "AccountEndpoint={cosmosdb.outputs.connectionString};Database=exercisedb;Container=profiles"
    },
    "profileapi": {
      "type": "project.v0",
      "path": "../../ProfileExercise.Api/ProfileExercise.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{profileapi.bindings.http.targetPort}",
        "ConnectionStrings__exercisedb": "{exercisedb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "angular": {
      "type": "container.v1",
      "build": {
        "context": "../../profile-exercise-angular",
        "dockerfile": "../../profile-exercise-angular/Dockerfile"
      },
      "env": {
        "NODE_ENV": "production",
        "services__profileapi__http__0": "{profileapi.bindings.http.url}",
        "services__profileapi__https__0": "{profileapi.bindings.https.url}",
        "PORT": "{angular.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8000,
          "external": true
        }
      }
    },
    "cosmosdb-roles": {
      "type": "azure.bicep.v0",
      "path": "cosmosdb-roles.module.bicep",
      "params": {
        "cosmosdb_outputs_name": "{cosmosdb.outputs.name}",
        "principalId": ""
      }
    }
  }
}